{
  "extends": ["plugin:@wordpress/eslint-plugin/esnext"],
  "env": {
    "browser": true,
    "amd": true,
    "node": true
  },
  "globals": {
    "_": false,
    "Backbone": false,
    "jQuery": true,
    "JSON": false,
    "wp": false,
    "export": false,
    "module": false,
    "require": false
  },
  "rules": {
    "no-cond-assign": [2, "except-parens"],
    "curly": 2,
    "eqeqeq": 2,
    "no-eq-null": 2,
    "no-unused-expressions": 2,
    "wrap-iife": [2, "any"],
    "no-caller": 2,
    "no-irregular-whitespace": 2,
    "quotes": [2, "single"],
    "no-undef": 2,
    "no-unused-vars": 2,
    "require-jsdoc": "off",
    "valid-jsdoc": [
      "error",
      {
        "prefer": {
          "arg": "param",
          "argument": "param",
          "extends": "augments",
          "returns": "return"
        },
        "preferType": {
          "array": "Array",
          "bool": "boolean",
          "Boolean": "boolean",
          "float": "number",
          "Float": "number",
          "int": "number",
          "integer": "number",
          "Integer": "number",
          "Number": "number",
          "object": "Object",
          "String": "string",
          "Void": "void"
        },
        "requireParamDescription": false,
        "requireReturn": false
      }
    ]
  }
}
