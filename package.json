{
  "name": "custom-plugin",
  "pluginName": "Custom Plugin",
  "version": "1.1.1",
  "description": "A Wordpress starter pack with pre-configured Gulp to setup custom Wordpress Plugin Boilerplate in a minute.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vijayhardaha/wordpress-plugin-boilerplate.git"
  },
  "keywords": [],
  "author": "Vijay Hardaha <https://twitter.com/vijayhardaha>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vijayhardaha/wordpress-plugin-boilerplate/issues"
  },
  "homepage": "https://github.com/vijayhardaha/wordpress-plugin-boilerplate#readme",
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "scripts": {
    "dev": "gulp watch",
    "build": "gulp build",
    "makepot": "gulp makepot",
    "lint": "eslint src/js/*",
    "lint:fix": "eslint --fix src/js/*",
    "lint-css": "stylelint 'src/scss/**/*.scss'",
    "lint-css:fix": "npm run lint-css -- --fix",
    "precommit": "npm run lint-css:fix && npm run lint:fix && npm run prod",
    "setup": "node setup.js && npm install",
    "cs:scan": "phpcs --standard=Wordpress custom-plugin.php includes",
    "cs:fix": "phpcbf --standard=Wordpress custom-plugin.php includes"
  },
  "devDependencies": {
    "@wordpress/browserslist-config": "^4.1.2",
    "@wordpress/eslint-plugin": "^11.0.1",
    "@wordpress/stylelint-config": "^20.0.2",
    "asset-builder": "github:vijayhardaha/asset-builder",
    "autoprefixer": "^10.4.4",
    "del": "^6.0.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssbeautify": "^3.0.0",
    "gulp-flatten": "^0.4.0",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-strip-css-comments": "^2.0.0",
    "gulp-terser": "^2.1.0",
    "lazypipe": "^1.0.2",
    "merge-stream": "^2.0.0",
    "ora": "^6.1.0",
    "postcss": "^8.4.12",
    "postcss-discard-duplicates": "^5.1.0",
    "prompts": "^2.4.2",
    "replace-in-file": "^6.3.2",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "stylelint": "^14.6.0",
    "stylelint-config-property-sort-order-smacss": "^9.0.0",
    "stylelint-order": "^5.0.0",
    "wp-pot": "^1.10.0"
  }
}
