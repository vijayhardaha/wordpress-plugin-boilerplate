{
  "license": "GPL-2.0-or-later",
  "description": "A Wordpress starter pack with pre-configured Gulp to setup custom Wordpress Plugin Boilerplate in a minute.",
  "homepage": "https://github.com/vijayhardaha/wordpress-plugin-boilerplate/",
  "keywords": [
    "wordpress",
    "wp"
  ],
  "support": {
    "issues": "https://github.com/vijayhardaha/wordpress-plugin-boilerplate/issues"
  },
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "squizlabs/php_codesniffer": "^3.6",
    "wp-coding-standards/wpcs": "^2.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "compat": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=phpcompat.xml --report=summary,source",
    "format": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --report=summary,source",
    "lint": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --report=summary,source",
    "lint:errors": "@lint -n"
  }
}
