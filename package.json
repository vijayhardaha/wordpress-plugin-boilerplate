{
	"name": "custom-plugin",
	"version": "1.0.0",
	"description": "A Wordpress starter pack with pre-configured Gulp to setup custom Wordpress Plugin Boilerplate in a minute.",
	"license": "GPLv2+",
	"author": "Vijay Hardaha <https://twitter.com/vijayhardaha>",
	"homepage": "https://github.com/vijayhardaha/wordpress-plugin-boilerplate#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vijayhardaha/wordpress-plugin-boilerplate.git"
	},
	"bugs": {
		"url": "https://github.com/vijayhardaha/wordpress-plugin-boilerplate/issues"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"scripts": {
		"dev": "gulp watch",
		"prebuild": "npm run lint-fix",
		"prebuild:css": "npm run lint-fix:css",
		"prebuild:js": "npm run lint-fix:js",
		"build": "gulp build",
		"build:css": "gulp css",
		"build:js": "gulp js",
		"lint:css": "stylelint src/scss",
		"lint:js": "eslint src/js",
		"lint:php": "composer run-script lint",
		"lint": "npm run lint:css && npm run lint:js && npm run lint:php",
		"lint-fix:css": "stylelint src/scss --fix",
		"lint-fix:js": "eslint src/js --fix",
		"lint-fix:php": "composer run-script lint-fix",
		"lint-fix": "npm run lint-fix:css && npm run lint-fix:js && npm run lint-fix:php",
		"prezip": "rm -rf custom-plugin.zip",
		"zip": "zip -r custom-plugin.zip ./*.php includes assets languages",
		"makepot": "wp i18n make-pot . --exclude=\"node_modules,vendor\" --slug=custom-plugin",
		"setup": "node setup.js && npm install"
	},
	"devDependencies": {
		"@wordpress/browserslist-config": "^5.0.0",
		"@wordpress/eslint-plugin": "^13.0.0",
		"@wordpress/stylelint-config": "^21.0.0",
		"autoprefixer": "^10.4.8",
		"del": "^6.1.1",
		"eslint": "^8.23.0",
		"eslint-plugin-jsdoc": "^39.3.6",
		"gulp": "^4.0.2",
		"gulp-clean-css": "^4.3.0",
		"gulp-clone": "^2.0.1",
		"gulp-concat": "^2.6.1",
		"gulp-flatten": "^0.4.0",
		"gulp-group-css-media-queries": "^1.2.2",
		"gulp-imagemin": "^7.1.0",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^9.0.1",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^5.1.0",
		"gulp-terser": "^2.1.0",
		"merge-stream": "^2.0.0",
		"ora": "^5.4.1",
		"postcss": "^8.4.16",
		"postcss-discard-duplicates": "^5.1.0",
		"prompts": "^2.4.2",
		"replace-in-file": "^6.3.5",
		"sass": "^1.54.8",
		"stylelint": "^14.11.0",
		"stylelint-config-property-sort-order-smacss": "^9.0.0",
		"stylelint-order": "^5.0.0"
	}
}
